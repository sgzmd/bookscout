<div class="flex flex-col items-center justify-center min-h-[80vh] px-4">
    <div class="bg-white p-8 rounded-3xl shadow-soft text-center max-w-md w-full">
        <h1 class="text-4xl font-bold text-emerald-900 mb-4">BookScout</h1>
        <p class="text-lg text-slate-600 mb-8">Ready to read? Track your journey, one page at a time.</p>
        
        <% if (locals.error === 'registration_closed') { %>
            <div class="bg-amber-50 border-l-4 border-amber-500 text-amber-700 p-4 mb-6 text-left" role="alert">
                <p class="font-bold">Registration Closed</p>
                <p class="text-sm">We are not accepting new users at this time.</p>
            </div>
        <% } else if (locals.error) { %>
            <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 text-left" role="alert">
                <p class="font-bold">Error</p>
                <p class="text-sm">Authentication failed. Please try again.</p>
            </div>
        <% } %>

        <% if (user) { %>
            <a href="/dashboard" class="block w-full py-3 px-6 bg-emerald-400 hover:bg-emerald-500 text-white rounded-2xl font-bold text-lg transition-transform transform hover:scale-105 shadow-lg">
                Go to Dashboard
            </a>
        <% } else { %>
            <div class="space-y-4">
                <a href="/auth/google" class="flex items-center justify-center w-full py-3 px-6 bg-white border-2 border-slate-200 hover:border-slate-300 text-slate-700 rounded-2xl font-bold text-lg transition-all hover:shadow-md">
                    <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="w-6 h-6 mr-2" alt="Google">
                    Sign in with Google
                </a>
                
                <!-- Dev Login for prototype
                <a href="/auth/dev" class="block w-full py-2 px-6 text-sm text-slate-500 hover:text-emerald-600 font-medium">
                    (Dev Login)
                </a> -->
            </div>
        <% } %>
    </div>
</div>
